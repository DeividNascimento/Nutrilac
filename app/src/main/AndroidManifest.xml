<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.nutrilac">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_nutrilac"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_nutrilac_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.activity.TratorzinhoActivity"></activity>
        <activity android:name=".ui.activity.MenuAlimentoSelecionadoActivity" />
        <activity android:name=".ui.activity.ListagemSilagensActivity" />
        <activity android:name=".ui.activity.ListagemFenosActivity" />
        <activity
            android:name=".ui.activity.ListagemCapinsActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name=".ui.activity.DefinirPrecoAlimentosActivity" />
        <activity android:name=".ui.activity.ListaDietasActivity" />
        <activity
            android:name=".ui.activity.LoginActivity"
            android:parentActivityName=".ui.activity.TelaPrimeiroAcessoActivity"
            android:windowSoftInputMode="stateHidden">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.activity.TelaPrimeiroAcessoActivity" />
        </activity>
        <activity
            android:name=".ui.activity.ListagemMineraisActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".ui.activity.ListagemConcentradosActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name=".ui.activity.EscolheVolumososActivity" />
        <activity android:name=".ui.activity.CriarDieta"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".ui.activity.ListaLotesActivity" />
        <activity android:name=".ui.activity.HomeActivity" />
        <activity android:name=".ui.activity.EscolheAlimentosActivity" />
        <activity
            android:name=".ui.activity.CriarLoteActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".ui.activity.TelaPrimeiroAcessoActivity"
            android:windowSoftInputMode="stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activity.CadastroUsuarioActivity"
            android:parentActivityName=".ui.activity.TelaPrimeiroAcessoActivity"
            android:windowSoftInputMode="stateHidden">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.activity.TelaPrimeiroAcessoActivity" />
        </activity>
    </application>

</manifest>